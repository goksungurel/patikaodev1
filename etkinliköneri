package patika;
import java.util.Scanner;
public class etkinlikönerme {
public static void main(String[] args) {
Scanner sc=new Scanner(System.in);
System.out.println("Lütfen sıcaklığı giriniz: ");
double sicaklik=sc.nextDouble();
if(sicaklik<5) {
	System.out.println("Kayak yapabilirsiniz");
	
}else if (5<=sicaklik &&  sicaklik<=15){
	System.out.println("sinema yapabilirsiniz");
}else if (15<=sicaklik && sicaklik<=25){
	System.out.println("piknik yapabilirsiniz");
}else if (sicaklik>25) {
	System.out.println("yüzme yapabilirsiniz");
}
}}
